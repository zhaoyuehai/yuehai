<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 主题基类 -->
    <style name="MyThemeBase" parent="Theme.AppCompat.Light.NoActionBar" />
    <!--默认主题浅色-->
    <style name="AppThemeBase" parent="MyThemeBase">
        <!--标题栏的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件的选中颜色，即checked或selected状态的颜色。-->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:background">@color/bg_gray</item>

        <item name="android:textColor">@color/text_color</item>
        <!--<item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>-->
    </style>

    <!-- 启动防止闪屏主题 -->
    <style name="AppLauncherTheme" parent="android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--<style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">-->
        <!--<item name="android:textSize">17sp</item>-->
        <!--<item name="android:textColor">@color/text_color</item>-->
        <!--<item name="android:background">@color/white</item>-->
    <!--</style>-->

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>